{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "warn"
    ],
    "camelcase": [
      "warn"
    ],
    "prefer-arrow-callback": [
      "warn"
    ],
    "no-empty": [
      "warn", 
      { 
        "allowEmptyCatch": true 
      }
    ],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      { 
        "argsIgnorePattern": "^_" 
      }
    ],
    "func-style": [
      "warn",
      "declaration",
      { 
        "allowArrowFunctions": true 
      }
    ]
  }
}